<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="generate_voucher"
        android:enabled="true"
        android:icon="@android:drawable/ic_input_add"
        android:shortcutShortLabel="@string/shortcut_generate_label"
        android:shortcutLongLabel="@string/shortcut_generate_long_label"
        android:shortcutDisabledMessage="@string/shortcut_disabled_message">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.muhwezi.choicehotspot"
            android:targetClass="com.muhwezi.choicehotspot.MainActivity">
             <extra android:name="action" android:value="generate_voucher" />
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    
    <shortcut
        android:shortcutId="view_dashboard"
        android:enabled="true"
        android:icon="@android:drawable/ic_menu_rotate"
        android:shortcutShortLabel="@string/shortcut_dashboard_label"
        android:shortcutLongLabel="@string/shortcut_dashboard_long_label"
        android:shortcutDisabledMessage="@string/shortcut_disabled_message">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.muhwezi.choicehotspot"
            android:targetClass="com.muhwezi.choicehotspot.MainActivity">
             <extra android:name="action" android:value="view_dashboard" />
        </intent>
    </shortcut>
</shortcuts>
