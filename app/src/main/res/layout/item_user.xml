<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    style="?attr/materialCardViewFilledStyle"
    app:cardElevation="1dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="?attr/colorPrimary"
                android:background="@drawable/circle_shape"
                android:padding="8dp"/>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="John Doe (192.168.1.5)"
                    android:textAppearance="?attr/textAppearanceTitleMedium"/>

                <TextView
                    android:id="@+id/user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Premium Plan"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/user_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Server: Hotspot-1"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Active"
                style="@style/Widget.Material3.Chip.Assist"
                app:chipMinHeight="32dp"/>

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/user_data_usage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Usage: 1.2 GB"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"/>
                
            <TextView
                android:id="@+id/user_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Left: 2h 30m"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"/>
                
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
