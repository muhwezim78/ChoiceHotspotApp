<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Settings"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- App Theme Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="App Theme"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggle_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_theme_light"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Light"
                        app:icon="@drawable/ic_sun" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_theme_dark"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dark"
                        app:icon="@drawable/ic_moon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_theme_system"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="System"
                        app:icon="@drawable/ic_settings" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pricing Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Pricing Configuration"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/layout_day_rate"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_week_rate"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_month_rate"
                    layout="@layout/item_settings_polished" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="System Status"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/layout_status"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_database"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_router_connection"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_api_version"
                    layout="@layout/item_settings_polished" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="System Live Information"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/layout_router_name"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_router_model"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_uptime"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_cpu_load"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_cpu_count"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_memory_usage"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_architecture"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_platform"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_serial_number"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_firmware"
                    layout="@layout/item_settings_polished" />

                <include
                    android:id="@+id/layout_version"
                    layout="@layout/item_settings_polished" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Logout"
            android:textColor="@color/white"
            app:backgroundTint="?attr/colorError"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart" />

        <TextView
            android:id="@+id/tv_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="Last updated: Never"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>